{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "strictNullChecks": true,
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@content/*": [
        "./src/content/*"
      ],
      "@root/*": [
        "./src/*"
      ],
      "@public/*": [
        "./public/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}