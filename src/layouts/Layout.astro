---
import { getCollection } from 'astro:content'
import '../styles/global.css'
import LanguagePicker from '@components/LanguagePicker/LanguagePicker.astro'
import { getLanguages } from '@lib/event'
import Analytics from '@vercel/analytics/astro'

interface Metadata {
  title?: string
  description?: string
}

interface Props {
  language?: string
  metadata?: Metadata
}

const { language, metadata } = Astro.props

const siteName = 'aarhus.dev'
const siteTitle = 'Aarhus Developer Events & Meetups – aarhus.dev'
const defaultDescription =
  'A timetable of developer events and tech meetups in Aarhus, Denmark. Find Swift, Rust, JavaScript, Ruby and more community gatherings.'

const pageTitle = metadata?.title ? `${metadata.title} – ${siteName}` : siteTitle
const pageDescription = metadata?.description || defaultDescription

const languages = await getLanguages()
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={pageDescription} />
    <script is:inline src="https://cdn.jsdelivr.net/npm/@tailwindplus/elements@1" type="module"
    ></script>
    <title>{pageTitle}</title>
    <Analytics />
  </head>
  <body class="p-4 font-mono text-xl max-w-5xl mx-auto">
    <nav class="flex space-x-2 items-center">
      <a class="hover:opacity-50 no-underline!" href="/">aarhus.dev</a>
      {
        language && (
          <>
            <span>/</span>
            <LanguagePicker selectedLanguage={language} languages={languages} />
          </>
        )
      }
      {
        !language && (
          <div class="flex ml-5 space-x-4">
            {languages.map((language) => (
              <a class="hover:underline text-gray-400! hover:text-gray-600!" href={'/' + language}>
                {language}
              </a>
            ))}
          </div>
        )
      }
      <!-- <div
        class="flex w-full space-x-2 justify-end text-sm *:text-gray-400! *:hover:text-gray-600!"
      >
        <a href="/about">About</a>
        <a href="#">GitHub</a>
      </div> -->
    </nav>
    <div class="h-8"></div>
    <slot />
  </body>
</html>
