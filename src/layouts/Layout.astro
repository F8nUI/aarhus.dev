---
import { getCollection } from 'astro:content'
import '../styles/global.css'
import Header from '@components/Header.astro'
import { getLanguages } from '@lib/event'
import Analytics from '@vercel/analytics/astro'

interface Metadata {
  title?: string
  description?: string
}

interface Props {
  language?: string
  metadata?: Metadata
}

const { language, metadata } = Astro.props

const siteName = 'aarhus.dev'
const siteTitle = 'Aarhus Developer Events & Meetups – aarhus.dev'
const defaultDescription =
  'A timetable of developer events and tech meetups in Aarhus, Denmark. Find Swift, Rust, JavaScript, Ruby and more community gatherings.'

const pageTitle = metadata?.title ? `${metadata.title} – ${siteName}` : siteTitle
const pageDescription = metadata?.description || defaultDescription

const languages = await getLanguages()
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={pageDescription} />
    <script is:inline src="https://cdn.jsdelivr.net/npm/@tailwindplus/elements@1" type="module"
    ></script>
    <title>{pageTitle}</title>
    <Analytics />
  </head>
  <body class="p-4 font-mono text-xl max-w-5xl mx-auto">
    <Header {language} {languages} />
    <div class="h-8"></div>
    <slot />
  </body>
</html>
